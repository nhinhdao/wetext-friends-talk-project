 <div class="row">
    <aside class="col-md-3">
      <section>
          <%= render partial: 'users/userinfo', locals: {user: @user}%>
      </section>
      <hr>
      <section>
        <h4 class="text-info">What is on your mind:</h4>
        <p class="post_error"></p>
        <% if flash[:warning] %>
            <p class="text-danger"><%= flash[:warning] %></p>
        <% end %>
        <%= render partial: 'posts/form', locals: {post: @post, size: '38x8'}%>
      </section>
    </aside>
    <div class="col-md-1"></div>
    <div class="col-md-8">
      <%= render partial: 'posts/allfeeds', locals: {feeds: @feeds, user: @user} %>
    </div>
  </div>
