
<div class="loginpage">
  <div class="row justify-content-lg-center">
    <%= image_tag("clipart2911231.png", class: "img-fluid") %>
  </div><br>
  <div class='row login'>
  <div class="col-2"></div>
  <div class="col-6">
    <div  class='col-4 text-center'><h1>Log In</h1></div>
    <% if flash[:warning] %>
        <div class="col-7" style="color: red"><%= flash[:warning] %></div>
    <% end %><br>
    <%= form_tag login_path, method: "post" do %>
      <%= render 'form' %>
      <%= submit_tag "Log In", class: "btn btn-primary" %>
    <% end %>
  </div>
  <div class="col-3">
    <br><br><br><br>
    <p><strong>Or, <%= link_to('Log in with Facebook!', '/auth/facebook') %></strong></p>
    <p><strong>New User? <%= link_to "Sign Up", signup_path %></strong></p>
  </div>
  <div class="col-1"></div>
  </div>
</div>